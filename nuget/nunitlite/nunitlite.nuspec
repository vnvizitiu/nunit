    <id>NUnitLite</id>
    <title>NUnitLite</title>
    <version>$version$</version>
    <authors>Charlie Poole, Rob Prouse</authors>
    <owners>Charlie Poole, Rob Prouse</owners>
    <licenseUrl>http://nunit.org/nuget/nunit3-license.txt</licenseUrl>
